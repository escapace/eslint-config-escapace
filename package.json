  "engines": {
    "node": ">=20.12.0",
    "pnpm": ">=9.0.6"
  },
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/node/index.js"
    }
  },
  "files": [
    "lib/node",
    "lib/types"
  ],
  "homepage": "https://github.com/escapace/eslint-config-escapace#readme",
