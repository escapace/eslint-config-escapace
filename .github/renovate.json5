{
  extends: [
    'config:base',
    'schedule:weekly',
    ':automergeLinters',
    ':automergeMinor',
    ':automergeTesters',
    ':enableVulnerabilityAlerts',
    ':rebaseStalePrs',
    ':semanticCommits',
    ':updateNotScheduled'
  ],
  rangeStrategy: 'update-lockfile',
  automerge: true,
  major: {
    automerge: false
  },
  lockFileMaintenance: {
    enabled: true
  },
  rebaseWhen: 'conflicted',
  ignorePresets: [':prHourlyLimit2'],
  semanticCommits: true,
  dependencyDashboard: true
}
